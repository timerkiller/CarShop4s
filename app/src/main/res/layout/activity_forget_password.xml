<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.vke.shop4stech.activity.ForgetPasswordActivity"
    android:background="@color/colorLightGray">

    <EditText
        android:id="@+id/tech_input_password_edit_text"
        android:layout_below="@id/tech_register_step_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/tech_input_password"
        android:background="@drawable/bg_load_input"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd = "15dp"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorTextHint"
        android:inputType="textPassword"
        android:paddingStart="15dp"
        android:focusable="true"/>

    <EditText
        android:id="@+id/tech_input_password_again_edit_text"
        android:layout_below="@id/tech_input_password_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="@string/tech_input_password_again"
        android:background="@drawable/bg_load_input"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd = "15dp"
        android:paddingStart="15dp"
        android:textColor="@color/colorText"
        android:textColorHint="@color/colorTextHint"/>

</RelativeLayout>
