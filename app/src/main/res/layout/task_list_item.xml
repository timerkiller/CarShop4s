<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tech_index"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tech_task_date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="26 5月"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"/>

    <RelativeLayout
        android:layout_toEndOf="@id/tech_task_date_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/bg_mossion">

        <TextView
            android:id="@+id/tech_order_serial_num_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号: WX201605061023082"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/colorBlack"
            />
        <ImageView
            android:id="@+id/tech_cut_off_line"
            android:layout_below="@id/tech_order_serial_num_text_view"
            android:contentDescription="@string/disp_null"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:src="@color/light_grey"/>
        <TextView
            android:id="@+id/tech_task_content_text_view"
            android:layout_below="@id/tech_cut_off_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="工位任务: 维修"
            android:textSize="14sp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/tech_task_execute_man_text_view"
            android:layout_below="@id/tech_task_content_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前执行人: 我是谁"
            android:textSize="14sp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"/>

        <ImageView
            android:id="@+id/tech_task_state_image_view"
            android:layout_below="@id/tech_task_execute_man_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/disp_null"
            android:background="@drawable/icon_running"/>
        <TextView
            android:id="@+id/tech_task_state_text_view"
            android:layout_toEndOf="@id/tech_task_state_image_view"
            android:layout_below="@+id/tech_task_execute_man_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="未开始"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            android:textColor="@color/colorGreen"
            android:textSize="14sp"/>

    </RelativeLayout>


</RelativeLayout>