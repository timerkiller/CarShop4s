<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorLightGray">

    <Button
        android:id="@+id/tech_pre_task_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/task_common_button_drawable"
        android:text="上一步"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_below="@id/tech_pre_task_button"
        android:id="@+id/tech_mix_func_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="暂停"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/task_mix_button_drawable"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="15dp"/>

    <Button
        android:layout_below="@id/tech_mix_func_button"
        android:id="@+id/tech_next_task_button"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/task_common_button_drawable"
        android:text="下一步"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="15dp"/>

</RelativeLayout>